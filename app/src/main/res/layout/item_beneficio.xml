<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="#D9D9D9"
    android:elevation="4dp">

    <TextView
        android:id="@+id/textViewNombreBeneficio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Beneficio"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/textViewDescripcionBeneficio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Descripción del beneficio"
        android:textSize="14sp"
        android:textColor="#555555" />

    <!-- Botón Generar QR -->
    <Button
        android:id="@+id/btnGenerarQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Generar QR"
        android:backgroundTint="#D9A066"
        android:textColor="#3E2723" />

</LinearLayout>
